---
import { getCollection } from "astro:content";
import Title from "../components/Title.astro";
import { siteConfig } from "../config/site-config";
import Layout from "../layouts/Layout.astro";
import TypedBlogPost from "src/components/TypedBlogPost.astro";

const blogPosts = await getCollection("blog", (post) => post.data.isDraft === false);


---

<Layout title="Inicio">
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <Title>
        {siteConfig.title}
      </Title>

      <a href="/blog/1" class="text-blue-500 hover:text-blue-700 underline p-4">
        Blog Paginado
      </a>
      <a href="/authors" class="text-blue-500 hover:text-blue-700 underline p-4">
        Autores
      </a>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {blogPosts.map((post) => <TypedBlogPost {post} />)}
      </div>
    </div>
  </section>
</Layout>
